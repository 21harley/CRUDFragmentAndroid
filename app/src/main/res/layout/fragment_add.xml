<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewFullProduct"
                android:layout_width="351dp"
                android:layout_height="272dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProductAdd"
                android:layout_width="349dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewFullProduct"
                tools:listitem="@layout/item_recyclerview_add"
                />

            <TextView
                android:id="@+id/textViewNameProduct"
                android:layout_width="174dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd"
                app:layout_constraintVertical_bias="0.032" />


            <TextView
                android:id="@+id/textViewDescriptionProduct"
                android:layout_width="353dp"
                android:layout_height="64dp"
                android:layout_marginTop="125dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd" />

            <TextView
                android:id="@+id/textViewCout"
                android:layout_width="158dp"
                android:layout_height="48dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="448dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:gravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd" />


            <LinearLayout
                android:id="@+id/textViewAmountAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="34dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/textViewDescriptionProduct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCout"
                app:layout_constraintVertical_bias="1.0">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_yellow" />

                <TextView
                    android:id="@+id/textViewAmountAddProductText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/likebutton"
                android:layout_width="66dp"
                android:layout_height="63dp"
                android:background="@drawable/heart1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.918"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.018" />

            <LinearLayout
                android:id="@+id/containerCountProduct"
                android:layout_width="171dp"
                android:layout_height="54dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="144dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/textViewAmountAddProduct"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionProduct"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/buttonDeleteProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewAmountProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonAddProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_button_purple_count_add"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/addToCart"
                android:layout_width="369dp"
                android:layout_height="54dp"
                android:layout_marginBottom="48dp"
                android:text="Add carrito"
                android:drawableStart="@drawable/add"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionProduct"
                app:layout_constraintVertical_bias="0.521" />

            <TextView
                android:id="@+id/textErrorAmout"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/color_purple"
                android:layout_width="218dp"
                android:layout_height="70dp"
                android:layout_marginBottom="236dp"
                android:text="the product is finished"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>