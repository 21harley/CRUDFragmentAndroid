<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.AddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewFullProduct"
                android:layout_width="351dp"
                android:layout_height="272dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProductAdd"
                android:layout_width="349dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewFullProduct"
                tools:listitem="@layout/item_recyclerview_add"
                />

            <TextView
                android:id="@+id/textViewNameProduct"
                android:layout_width="174dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.109"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd"
                app:layout_constraintVertical_bias="0.032" />

            <TextView
                android:id="@+id/textViewsSubTitleAddProduct"
                android:layout_width="145dp"
                android:layout_height="28dp"
                android:layout_marginBottom="416dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewDescriptionProduct"
                android:layout_width="353dp"
                android:layout_height="64dp"
                android:layout_marginTop="125dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd" />

            <TextView
                android:id="@+id/textViewCout"
                android:layout_width="99dp"
                android:layout_height="44dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="448dp"
                android:textSize="24dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewProductAdd" />

            <TextView
                android:id="@+id/textViewAmountAddProduct"
                android:layout_width="99dp"
                android:layout_height="44dp"
                android:layout_marginBottom="240dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.897"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionProduct"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/likebutton"
                android:layout_width="66dp"
                android:layout_height="63dp"
                android:background="@drawable/heart1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.918"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.018" />

            <LinearLayout
                android:id="@+id/containerCountProduct"
                android:layout_width="171dp"
                android:layout_height="54dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="88dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintEnd_toStartOf="@+id/textViewAmountAddProduct"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionProduct"
                app:layout_constraintVertical_bias="0.227">

                <Button
                    android:id="@+id/buttonAddProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    />

                <TextView
                    android:id="@+id/textViewAmountProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:text="0"
                    android:textColor="@color/black"
                    />

                <Button
                    android:id="@+id/buttonDeleteProduct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button_purple_count_add"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="+" />

            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="369dp"
                android:layout_height="54dp"
                android:layout_marginBottom="48dp"
                android:text="comprar"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.619"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionProduct"
                app:layout_constraintVertical_bias="0.591" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>